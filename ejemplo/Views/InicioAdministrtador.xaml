<Window x:Class="ejemplo.Views.InicioAdministrtador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ejemplo.Views"
        mc:Ignorable="d"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Height="700" Width="1300">
    
    <Border CornerRadius="10" BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="Black" Offset="1.5"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border CornerRadius="10,0,0,10"
                    Grid.Column="0"
                    Background="#19183B">

                <DockPanel>

                    <StackPanel Orientation="Horizontal"
                                Height="35"
                                Margin="15,25,0,40"
                                VerticalAlignment="Top"
                                DockPanel.Dock="Top">
                        <TextBlock Text="Administrador"
                                   Foreground="#E7F2EF"
                                   FontSize="25"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <RadioButton Style="{StaticResource MenuButton}"
                                 Tag="#E91E63"
                                 DockPanel.Dock="Bottom"
                                 Margin="-5,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="SignOut" Style="{StaticResource MenuIcon}"/>
                            <TextBlock Text="Salir" Style="{StaticResource MenuText}"/>
                        </StackPanel>
                    </RadioButton>

                    <StackPanel>



                        <RadioButton Style="{StaticResource MenuButton}"
                                     Tag="#E7F2EF"
                                     IsChecked="True">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome Icon="User" Style="{StaticResource MenuIcon}"/>
                                <TextBlock Text="Empleados" Style="{StaticResource MenuText}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource MenuButton}"
                                     Tag="#4ECCA3">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome Icon="Building" Style="{StaticResource MenuIcon}"/>
                                <TextBlock Text="Departamentos" Style="{StaticResource MenuText}"/>
                            </StackPanel>
                        </RadioButton>

                        <RadioButton Style="{StaticResource MenuButton}"
                                     Tag="#FFD700">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome Icon="Briefcase" Style="{StaticResource MenuIcon}"/>
                                <TextBlock Text="Puesto" Style="{StaticResource MenuText}"/>
                            </StackPanel>
                        </RadioButton>

                    </StackPanel>

                </DockPanel>
            </Border>

            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1"
                    Background="#A1C2BD">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,25,20,10">

                        <TextBlock Text="Lista de datos"
                                   Foreground="#19183B"
                                   FontSize="25"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,0,0">

                            <Button Style="{StaticResource ActionButton}" Tag="#F9A825" ToolTip="Editar">
                                <fa:ImageAwesome Icon="Edit" Style="{StaticResource ActionButtonIcon}"/>
                            </Button>

                            <Button Style="{StaticResource ActionButton}" Tag="#D32F2F" ToolTip="Eliminar">
                                <fa:ImageAwesome Icon="Trash" Style="{StaticResource ActionButtonIcon}"/>
                            </Button>

                            <Button Style="{StaticResource ActionButton}" Tag="#4CAF50" ToolTip="Agregar">
                                <fa:ImageAwesome Icon="PlusSquare" Style="{StaticResource ActionButtonIcon}"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <Grid Grid.Row="1"/>

                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
