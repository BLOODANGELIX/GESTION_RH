<UserControl x:Class="ejemplo.Views.DepartamentosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ejemplo.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <DataGrid Style="{StaticResource EstiloTablaRefinado}" AutoGenerateColumns="False" Margin="0,10,0,0">
        <DataGrid.Columns>
            <DataGridTextColumn Header="ID" Binding="{Binding IdDepartamento}" Width="*"/>
            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="2*"/>
            <DataGridTextColumn Header="Jefe / Responsable" Binding="{Binding Jefe}" Width="2*"/>
        </DataGrid.Columns>
    </DataGrid>


</UserControl>

