<Window x:Class="ejemplo.Views.AgregarDepartamento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ejemplo.Views"
        mc:Ignorable="d"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        Height="700" Width="1300">
    <Window.Resources>
        <Style x:Key="Botones" TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#19183B"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Width="200"
                            Height="45"
                            CornerRadius="10"
                            Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#19183B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- <Window.DataContext>
        <viewModels:AgregarDepartamentoViewModel/>
    </Window.DataContext> -->

    <Border CornerRadius="10" BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="Black" Offset="1.5"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Border CornerRadius="0,10,10,0"
                    Grid.Column="1"
                    Background="#A1C2BD">
                <Grid>
                    <!-- Título centrado -->
                    <TextBlock Text="Añadir Departamentos"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,60,0,0"
                       FontSize="32"
                       FontFamily="Montserrat"
                       FontWeight="SemiBold"
                       Foreground="#19183B"/>

                    <!-- Contenido centrado -->
                    <Grid VerticalAlignment="Stretch" Margin="0 150 0 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Primera fila: Nombre del Departamento -->
                        <TextBox x:Name="NombreDept"
                                 Text="Nombre del Departamento"
                                 Grid.Row="0" 
                                 Width="790" 
                                 Height="50" 
                                 Margin="0,0,0,20" 
                                 HorizontalAlignment="Center" 
                                 FontSize="20" 
                                 BorderBrush="#19183B" 
                                 BorderThickness="1" 
                                 Padding="10"
                                 GotFocus="TextBox_GotFocus"
                                 LostFocus="TextBox_LostFocus"/>

                        <!-- Segunda fila: Jefe de Departamento -->
                        <TextBox x:Name="JefeDept" 
                                 Text="Jefe de Departamento"
                                 Grid.Row="2"
                                 Width="790" 
                                 Height="50" 
                                 Margin="0,0,0,20" 
                                 HorizontalAlignment="Center" 
                                 FontSize="20" 
                                 BorderBrush="#19183B" 
                                 BorderThickness="1" 
                                 Padding="10"
                                 GotFocus="TextBox_GotFocus"
                                 LostFocus="TextBox_LostFocus"/>

                        <!-- Quinta fila: Botones -->
                        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                            <Button x:Name="btnAñadir"
                            Command="{Binding AñadirCommand}"
                            Content="Añadir"
                            Style="{StaticResource Botones}"/>

                            <Button x:Name="btnCancelar"
                            Command="{Binding AñadirCommand}"
                            Content="Cancelar"
                            Style="{StaticResource Botones}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>