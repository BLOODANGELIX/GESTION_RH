<UserControl x:Class="ejemplo.Views.EmpleadoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ejemplo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DataGrid Style="{StaticResource EstiloTablaRefinado}" AutoGenerateColumns="False" Margin="0,10,0,0">
        <DataGrid.Columns>
            <DataGridTextColumn Header="RFC" Binding="{Binding RFC}" Width="*"/>
            <DataGridTextColumn Header="Nombre Completo" Binding="{Binding NombreCompleto}" Width="2*"/>
            <DataGridTextColumn Header="Departamento" Binding="{Binding Departamento}" Width="2*"/>
            <DataGridTextColumn Header="Puesto" Binding="{Binding Puesto}" Width="2*"/>
        </DataGrid.Columns>
    </DataGrid>



</UserControl>
